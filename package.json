	"name": "anonymous-message-board",
	"version": "0.0.1",
	"description": "Anonymous Message Board - JohnMacIntire.com",
	"main": "public/index.js",
	"scripts": {
		"start": "nodemon public/index.js",
		"sass": "sass --watch src/sass:public/style",
		"reload-browser": "browser-sync start --proxy localhost:3000 --files 'public/*.css', views/*.html, src/routes/*.js, src/controllers/*.js, src/models/*.js",
		"typescript": "tsc -watch",
		"babel": "babel ./src --out-dir public --extensions '.ts,.tsx'",
		"babel-watch": "babel --watch src --out-dir public --extensions .ts,.tsx --presets @babel/typescript"
	},
	"dependencies": {
		"body-parser": "^1.15.2",
