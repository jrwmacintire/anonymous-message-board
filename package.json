		"mocha": "^3.5.3",
		"mongodb": "^2.2.36",
		"mongoose": "^5.7.7",
		"node-fetch": "^2.6.0",
		"node-sass": "^4.13.0",
		"zombie": "^5.0.5"
	},
	"engines": {
		"node": "4.4.3"
	},
	"repository": {
		"type": "git",
