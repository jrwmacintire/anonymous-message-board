{
  "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "allowJs": true,
      "noEmit": true,
      "strict": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "public"
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      ".vscode"
  ]
}