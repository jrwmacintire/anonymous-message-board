{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "lib": [
            "dom",
            "es6"
        ],
        "outDir": "public",
        "sourceMap": true
    },
    "include": [
        "src",
    ]
}